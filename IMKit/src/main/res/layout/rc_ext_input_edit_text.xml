<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@drawable/custom_border"
        android:minHeight="45dp">

        <EditText
            android:id="@+id/rc_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:maxLines="5"
            android:hint="@string/rc_input_hint"
            android:textColorHint="#b3b3b3"
            android:background="@null"
            android:textSize="14sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/rc_emoticon_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/rc_emotion_toggle_selector"/>

    <FrameLayout
        android:id="@+id/rc_send_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rc_send_toggle_selector"
        >

        <TextView
            android:layout_width="56dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/rc_ext_send"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </FrameLayout>
</LinearLayout>
