            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".my.activity.LoginActivity"
            android:theme="@style/imagePagerTheme"/>
        <activity android:name=".my.activity.RegisterBySMSActivity" />
        <activity android:name=".my.activity.CheckTelActivity" />
        <activity android:name=".my.activity.GuideActivity" />
        <activity android:name=".my.activity.AddPasswordActivity" />
        <activity android:name=".my.MySetting" />
        <activity android:name=".my.setting.Personal" />
        <activity android:name=".my.setting.Safety" />
        <activity android:name=".my.setting.About"></activity>
        <activity android:name=".home.activity.ImagePagerActivity" android:theme="@style/imagePagerTheme"/>
        <activity android:name=".publish.PublishActivity"></activity>
        <activity android:name=".relay_publish.RelayPublishAcitivity"></activity>
        <activity android:name=".publish.imageselector.ImageSelectorActivity"></activity>
        <activity android:name=".publish.imageselector.PreviewActivity"></activity>
        <activity android:name=".home.activity.DetailActivity"></activity>
    </application>

</manifest>