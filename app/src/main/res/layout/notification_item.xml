<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <RelativeLayout
        android:id="@+id/notification_layout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/notification_user_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_comment"/>

        <TextView
            android:id="@+id/notification_user_count"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/notification_layout"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/notification_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:text="思瑶"/>
        <TextView
            android:id="@+id/notification_user_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:maxEms="17"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="美国的华莱士，真的是比你们不知道高到哪里去"/>

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:text="12-2-8:30"/>
    </RelativeLayout>

</RelativeLayout>
