<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/tail_linear_layout"
              android:layout_margin="@dimen/item_head_margin"
              android:layout_marginLeft="@dimen/left_base_margin"
              android:layout_marginRight="@dimen/right_base_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <!--此处动态添加转发的view-->

    <TextView
        android:id="@+id/tv_address"
        android:layout_marginTop="@dimen/item_head_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="12sp"
        android:textColor="@color/pos_com_add_font_color"
        android:gravity="start|center_vertical"/>
    <TextView
        android:id="@+id/tv_comment_add_count"
        android:layout_marginTop="@dimen/item_head_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="12sp"
        android:textColor="@color/pos_com_add_font_color"
        android:gravity="start|center_vertical"/>



    <com.sysu.pro.fade.home.view.ClickableProgressBar
        android:id="@+id/clickable_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>
