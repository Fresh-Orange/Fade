            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:src="@drawable/ic_addpic"
            />

        <ImageButton
            android:id="@+id/icon_sub_pic"
