            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:src="@drawable/ic_addpic"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout_dots"
