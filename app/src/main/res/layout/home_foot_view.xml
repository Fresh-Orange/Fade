<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/foot_item_height">

    <View
        android:layout_width="130dp"
        android:layout_height="match_parent">

    </View>
    <ProgressBar
        android:id="@+id/loading"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/dialog_style_xml_color"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_foot"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="@dimen/foot_item_text_size"
        android:text="@string/foot_item_hint"/>
</LinearLayout>
