<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground = "?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/home_item_head"></include>


        <!--图片以及图片下方点的封装-->
        <com.sysu.pro.fade.home.view.imageAdaptiveIndicativeItemLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/item_head_margin"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size"
            android:id="@+id/tv_title"
            android:text="今天天气真好哈哈哈哈哈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <include layout="@layout/home_item_tail"></include>
    </LinearLayout>

</android.support.v7.widget.CardView>